{
    "compilerOptions": {
      "target": "es6",
      "types": ["node", "jest"],
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      }
    },
    // "include": [
    //     "tests/*.ts",
    //     "tests/test.ts",
    //     "server/app.js"
    // ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  